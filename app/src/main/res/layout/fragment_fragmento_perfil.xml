<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.FragmentoPerfil">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/rut_ET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/escribir"
                android:drawablePadding="15dp"
                android:ems="10"
                android:focusable="false"
                android:background="@color/white"
                android:hint="rut"
                android:inputType="textPersonName"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                android:layout_margin="@dimen/cardview_default_radius"/>

            <EditText
                android:id="@+id/pass_ET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/escribir"
                android:drawablePadding="15dp"
                android:ems="10"
                android:background="@color/white"
                android:hint="ContraseÃ±a"
                android:inputType="textPersonName"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                android:layout_margin="@dimen/cardview_default_radius"/>

            <EditText
                android:id="@+id/nombre_ET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/escribir"
                android:drawablePadding="15dp"
                android:ems="10"
                android:background="@color/white"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                android:layout_margin="@dimen/cardview_default_radius"/>

            <EditText
                android:id="@+id/apellido_ET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/escribir"
                android:drawablePadding="15dp"
                android:ems="10"
                android:background="@color/white"
                android:hint="Apellido"
                android:inputType="textPersonName"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                android:layout_margin="@dimen/cardview_default_radius"/>


            <EditText
                android:id="@+id/fNacimiento_ET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/cardview_default_radius"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/escribir"
                android:drawablePadding="15dp"
                android:ems="10"
                android:enabled="false"
                android:hint="Fecha de nacimiento"
                android:inputType="textPersonName"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic" />

            <Button
                android:id="@+id/fNacimiento_BTN"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="#1976d2"
                android:onClick="ClickFecha"
                android:text="Selecciona fecha"
                android:textColor="#FFF"
                android:layout_margin="@dimen/cardview_default_radius">

            </Button>

            <Spinner
                android:id="@+id/sexo_SP"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/escribir"
                android:drawablePadding="15dp"
                android:ems="10"
                android:background="@color/white"
                android:hint="Fecha de nacimiento"
                android:inputType="textPersonName"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                android:layout_margin="@dimen/cardview_default_radius"
                android:spinnerMode="dialog"
                android:prompt="@id/sexo_SP">
            </Spinner>

            <EditText
                android:id="@+id/correo_ET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/escribir"
                android:drawablePadding="15dp"
                android:ems="10"
                android:background="@color/white"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                android:layout_margin="@dimen/cardview_default_radius"/>

            <EditText
                android:id="@+id/telefono_ET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/escribir"
                android:drawablePadding="15dp"
                android:ems="10"
                android:background="@color/white"
                android:hint="Telefono"
                android:inputType="number"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                android:layout_margin="@dimen/cardview_default_radius"/>

            <EditText
                android:id="@+id/direccion_ET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/escribir"
                android:drawablePadding="15dp"
                android:ems="10"
                android:background="@color/white"
                android:hint="Direccion"
                android:inputType="textPersonName"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                android:layout_margin="@dimen/cardview_default_radius"/>

            <Spinner
                android:id="@+id/comunas_SP"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/escribir"
                android:drawablePadding="15dp"
                android:ems="10"
                android:background="@color/white"
                android:hint="Fecha de nacimiento"
                android:inputType="textPersonName"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                android:layout_margin="@dimen/cardview_default_radius"
                android:spinnerMode="dialog"
                android:prompt="@id/comunas_SP">
            </Spinner>

            <Button
                android:id="@+id/guardar_BTN"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="#1976d2"
                android:text="Guardar"
                android:textColor="#FFF"
                android:textSize="18sp" />


        </LinearLayout>
    </FrameLayout>

</FrameLayout>